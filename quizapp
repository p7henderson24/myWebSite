<script language = JavaScript>
var score = 0;
var score = 0;
var words = ["Midevil Western Europe",
			"Han Dynasty",
			"Roman Empire",
			"Greece",
			"Umayyad Empire",
			"Abbasid Empire",
			"Tang/Song Dynasties"
