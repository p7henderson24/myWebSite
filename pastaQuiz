function saucePicker ()
{
	var select = document.getElementById ("pasta").value;
	getToppingList(select);
}

function getToppingList(x)
 {

	var ToppingList = new Array (4);
	var counter1 = 0;
	var counter2 = 0;
	
while (counter1  <pasta.length)
	{
		if (pasta[counter1][1] == x)
		{
		ToppingList[counter2] = pasta[counter1];
		counter2++;
		}
		counter1++;
	}
	var v=0
		while (v<ToppingList.length)
		{
		alert (ToppingList [v] [0]);
		v++;
		}
}
